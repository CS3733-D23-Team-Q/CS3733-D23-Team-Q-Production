<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="599.0" prefWidth="773.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D23.teamQ.controllers.ProfilePageController">
    <center>
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0">
                            <children>
                        <Label text="Title: " />
                                <Label fx:id="Title_Display" text="Label" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="ID Number: " />
                                <Label fx:id="ID_Number_Display" text="Label" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="First Name: " />
                                <Label fx:id="First_Name_Display" text="Label" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="Last Name: " />
                                <Label fx:id="Last_Name_Display" text="Label" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="Username: " />
                                <Label fx:id="Username_Display" text="Label" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="Email: " />
                                <Label fx:id="Email_Display" text="Label" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                            <children>
                        <Label text="Phone Number: " />
                                <Label fx:id="Phone_Number_Display" text="Label" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="518.0" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="ProfilePage_Home_Button" mnemonicParsing="false" style="-fx-background-color: #002d59; -fx-background-radius: 10;" text="Home" textFill="WHITE" />
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="ProfilePage_Edit_Button" alignment="CENTER" mnemonicParsing="false" onAction="#EditPressed" style="-fx-background-color: #002d59; -fx-background-radius: 10;" text="Edit Profile" textFill="WHITE" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
    <top>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </top>
</BorderPane>
