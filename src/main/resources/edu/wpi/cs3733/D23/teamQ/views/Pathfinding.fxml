<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="root" prefHeight="100.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D23.teamQ.controllers.PathfindingController">
   <children>
      <Group fx:id="parent">
         <children>
            <ImageView fx:id="map" fitHeight="680.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../01_thefirstfloor.png" />
               </image>
            </ImageView>
            <Button fx:id="previousFloor" layoutX="10.0" layoutY="340.0" mnemonicParsing="false" onAction="#previousFloorClicked" prefHeight="39.0" prefWidth="43.0" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../Chevron%20Left.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="nextFloor" layoutX="950.0" layoutY="340.0" mnemonicParsing="false" onAction="#nextFloorClicked" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="38.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../Chevron%20Right.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="restButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#restButtonClicked" text="Restroom" />
            <Button fx:id="cafeButton" layoutX="100.0" layoutY="10.0" mnemonicParsing="false" onAction="#cafeButtonClicked" text="Cafeteria" />
            <Button fx:id="elevButton" layoutX="190.0" layoutY="10.0" mnemonicParsing="false" onAction="#elevButtonClicked" text="Elevator" />
         </children>
      </Group>
   </children>
</HBox>
